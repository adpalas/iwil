<%- include("../partials/header") %>

<div id="resultsContainer">
	<div id="containerHeader">
		<h1> Results Page for: "<%= search %>"</h1>
	</div>
	<div id="resultsBody">
		<div class="scrollContainer">
			<a id="scrollLeft" class="scrollButtonFade" href="#"><i class="fas fa-arrow-left"></i></a>
		</div>
		
		<div id="resultsContent" >
			<% if(movieResults.length > 0) {%>
				<% movieResults.forEach(function(movie, i){ %>
					<div class="selection fade">
						<div class="imgContainer">
							<% if (movie["Poster"] === 'N/A') {%>
								<div class="posterUnavailable"><i class="fas fa-images"></i><span>Poster Unavailable</span></div>
							<%} else {%>
								<img src="<%= movie["Poster"]%>" alt="Poster Unavailable">
							<%}%>
						</div>
						<div class="selection-body">
							<div class="selection-info">
								<% if(movie["Title"].length > 40) {%>
									<h5 class="selection-title"><%= movie["Title"].substring(0, 40) + "..."%></h5>
								<%} else { %>
									<h5 class="selection-title"><%= movie["Title"]%></h5>
								<% } %>
								
								<% if(detailList[i].length >= 100) {%>
									<p><%= detailList[i].substring(0, 100) + "..."%></p>
								<%} else {%>
									<p><%= detailList[i]%></p>
								<% } %>
							</div>
							<div class="selection-options">
								<button class="button addToWatchlistButton" name="Add" value="<%= JSON.stringify(movie) %>"><i class="fas fa-plus"></i><span>Add</span></button>
								<button class="button"> 
									<a href="/search/<%= movie["imdbID"]%>"><i class="fas fa-info-circle"></i><span>Details</span></a>
								</button>
							</div>
						</div>
					</div>
				<% }); %>
			<% } else { %>
				<h1> Try Asking Again.... </h1>
			<%}%>
		</div>
		<div class="scrollContainer">
			<a id="scrollRight" class="scrollButtonFade" href="#"><i class="fas fa-arrow-right"></i></a>
		</div>
	</div>
</div>

<div id="addToWatchlist">
	<!-- Modal content -->
	<div id="addToWatchlist-content">
		<span id="close"><i class="fas fa-times"></i></span>
		<h1>Add to Watchlist</h1>
		<div id="watchlistsContent" >
			<div class="watchlistsRow">
				<div id="addList">
					<div id="iconContainer" class="popUp-iconContainer">
						<a href="/watch/new"><i class="fas fa-plus"></i></a>
					</div>
				</div>
				<% if(watchLists.length > 0) {%>
					<% for(var i = 0; i < watchLists.length; i++) {%>
						<%if(i !== 5) {%>
							<div class="watchlist-selection">
								<div class="watchlist-content">
									<button class="popUp-style" name="Add" value="<%= watchLists[i]._id %>">
										<div class="watchlist-body">
											<%if(watchLists[i].imageList.length === 0){%>
												<div class="noImage"><i class="fas fa-film"></i></div>
											<%}else if(watchLists[i].imageList.length < 4) {%>
												<div class="oneImage"><img src="<%= watchLists[i].imageList[0] %>"></div>
											<%} else {%>
												<div class="imageRow">
													<img src="<%= watchLists[i].imageList[0] %>">
													<img src="<%= watchLists[i].imageList[1] %>">
												</div>
												<div class="imageRow">
													<img src="<%= watchLists[i].imageList[2] %>">
													<img src="<%= watchLists[i].imageList[3] %>">
												</div>
											<%}%>
										</div>
									</button>
									<div class="watchlist-selection-title popUp-style">
										<h7>
											<%if(watchLists[i].name.length > 30) {%>
												<button name="Add" value="<%= watchLists[i]._id %>"><%= watchLists[i].name.substring(0, 30) + "..."%></button>
											<%}else{%>
												<button name="Add" value="<%= watchLists[i]._id %>"><%= watchLists[i].name%></button>
											<%}%>
										</h7>
									</div>
								</div>
							</div>
						<%}else{%>
							<%break;%>
						<%}%>
					<%}%>
				<%}%>
			</div>
			<% if(watchLists.length > 5) {%>
				<% const remainingLists = watchLists.length - 5; %>
				<% const numberOfRows = Math.floor(remainingLists/6) + remainingLists%6; %>
				<% var index = 5; %>
			
				<% if (remainingLists < 6) { %>
					<div class="watchlistsRow">
					<% for(var i = 0; i < remainingLists; i++) {%>
						<div class="watchlist-selection">
							<div class="watchlist-content">
								<button class="popUp-style" name="Add" value="<%= watchLists[index+i]._id %>">
									<div class="watchlist-body">
										<%if(watchLists[index+i].imageList.length === 0){%>
											<div class="noImage"><i class="fas fa-film"></i></div>
										<%}else if(watchLists[index+i].imageList.length < 4) {%>
											<div class="oneImage"><img src="<%= watchLists[index+i].imageList[0] %>"></div>
										<%} else {%>
											<div class="imageRow">
												<img src="<%= watchLists[index+i].imageList[0] %>">
												<img src="<%= watchLists[index+i].imageList[1] %>">
											</div>
											<div class="imageRow">
												<img src="<%= watchLists[index+i].imageList[2] %>">
												<img src="<%= watchLists[index+i].imageList[3] %>">
											</div>
										<%}%>
									</div>
								</button>
								<div class="watchlist-selection-title popUp-style">
									<h7>
										<%if(watchLists[index+i].name.length > 30) {%>
											<button name="Add" value="<%= watchLists[index+i]._id %>"><%= watchLists[index+i].name.substring(0, 30) + "..."%></button>
										<%}else{%>
											<button name="Add" value="<%= watchLists[index+i]._id %>"><%= watchLists[index+i].name%></button>
										<%}%>
									</h7>
								</div>
							</div>
						</div>
					<%}%>
					</div>
				<%} else { %>
					<% for(var i = 0; i < numberOfRows; i++) {%>
						<div class="watchlistsRow">
						<% for(var j = 0; j < 6; j++) {%>
							<div class="watchlist-selection">
								<div class="watchlist-content">
									<button class="popUp-style" name="Add" value="<%= watchLists[index]._id %>">
										<div class="watchlist-body">
											<%if(watchLists[index].imageList.length === 0){%>
												<div class="noImage"><i class="fas fa-film"></i></div>
											<%}else if(watchLists[index].imageList.length < 4) {%>
												<div class="oneImage"><img src="<%= watchLists[index].imageList[0] %>"></div>
											<%} else {%>
												<div class="imageRow">
													<img src="<%= watchLists[index].imageList[0] %>">
													<img src="<%= watchLists[index].imageList[1] %>">
												</div>
												<div class="imageRow">
													<img src="<%= watchLists[index].imageList[2] %>">
													<img src="<%= watchLists[index].imageList[3] %>">
												</div>
											<%}%>
										</div>
									</button>
									<div class="watchlist-selection-title popUp-style">
										<h7>
											<%if(watchLists[index].name.length > 30) {%>
												<button name="Add" value="<%= watchLists[index]._id %>"><%= watchLists[index].name.substring(0, 30) + "..."%></button>
											<%}else{%>
												<button name="Add" value="<%= watchLists[index]._id %>"><%= watchLists[index].name%></button>
											<%}%>
										</h7>
									</div>
								</div>
							</div>
							<% if(index !== watchLists.length - 1){index++} else{break;} %>
						<%}%>
						</div>
					<%}%>
				<%}%>
			<%}%>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>