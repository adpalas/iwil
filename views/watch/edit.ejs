<%- include("../partials/header") %>

<div id="newWatchlistSection">
	<div id="containerHeader">
		<h1>Edit <%= watchList.name%></h1>
	</div>
	<div id="newWatchlistContainer">
		<div id="formContainer">
			<form action="/watch/<%= watchList._id%>?_method=PUT" method="POST" id="newWLForm">
				<input type="text" name="watchList[name]" value="<%= watchList.name%>" required>
				<textarea name="watchList[description]" form="newWLForm"><%= watchList.description%></textarea>
				<button id="newWatchlistButton" class="button"><i class="fas fa-edit"></i><span>Update</span></button>
			</form>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>